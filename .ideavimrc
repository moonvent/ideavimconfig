Plug 'tpope/vim-commentary'

set number relativenumber


function! CommentOnOneButton()
  " function for create comment

  if mode() = 'v'
    " if in visual mode and have selection, comment selection
    execute getpos("'<") .. "," .. getpos("'>") .. "Commentary"

  else
    " if not in visual mode, comment one current string
    execute line('.') .. "," .. line('.') .. "Commentary"

  endif

endfunction

map <leader>/ :call CommentOnOneButton()<CR>

